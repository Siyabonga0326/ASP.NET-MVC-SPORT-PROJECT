@model SportSelect.Models.Student

@{
    ViewData["Title"] = "Announcements";
}

<h1>Announcements</h1>
<html>
<head>
    <title>Announcement Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
            display: flex;
            justify-content: space-between;
        }

        .announcement {
            width: 60%;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        .calendar-container {
            width: 35%;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        .emoji {
            font-size: 24px;
        }

        .sport-news {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="announcement">
            <h2>📢 Welcome to our Announcement Page! 🎉</h2>
            <p>Here you'll find all the latest updates.</p>

        </div>
        <div class="calendar-container">
            <h2 class="emoji">📅 Calendar</h2>
            <div id="calendar">
                <table>
                    <thead>
                        <tr>
                            <th colspan="7">April 2024</th>
                        </tr>
                        <tr>
                            <th>Sun</th>
                            <th>Mon</th>
                            <th>Tue</th>
                            <th>Wed</th>
                            <th>Thu</th>
                            <th>Fri</th>
                            <th>Sat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>2</td>
                            <td>3</td>
                            <td>4</td>
                            <td>5</td>
                            <td>6</td>
                            <td>7</td>
                        </tr>
                        <tr>
                            <td>8</td>
                            <td>9</td>
                            <td>10</td>
                            <td>11</td>
                            <td>12</td>
                            <td>13</td>
                            <td>14</td>
                        </tr>
                        <tr>
                            <td>15</td>
                            <td>16</td>
                            <td>17</td>
                            <td>18</td>
                            <td>19</td>
                            <td>20</td>
                            <td>21</td>
                        </tr>
                        <tr>
                            <td>22</td>
                            <td>23</td>
                            <td>24</td>
                            <td>25</td>
                            <td>26</td>
                            <td>27</td>
                            <td>28</td>
                        </tr>
                        <tr>
                            <td>29</td>
                            <td>30</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="sport-news">
        <h2>🏀 Sport News</h2>
        @{

            var sportNews = "Latest sport news will be displayed here.";
        }
        <p>@sportNews</p>
    </div>
</body>
</html>

