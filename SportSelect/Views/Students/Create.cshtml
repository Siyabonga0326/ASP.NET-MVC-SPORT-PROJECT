@model SportSelect.Models.Student

@{
    ViewData["Title"] = "Create";
    var errorMessage = TempData["ErrorMessage"] as string;
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
<!DOCTYPE html>
<html>
<head>
    <title>Sport Registration Form</title>
    <style>
        .container {
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 5px;
            width: calc(70% - 20px); /* Set width to 50% minus margin for separation */
            float: initial; /* Float containers to the left */
            box-sizing: border-box; /* Include padding and border in the total width */
            background-color: white; /* Background color for odd-numbered containers */
        }

            .container:nth-child(even) {
                background-color: white;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="email"],
        select {
            width: calc(100% - 22px); /* Subtract padding and border from width */
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"],
        input[type="button"] {
            width: calc(50% - 5px); /* Adjusted button width for two buttons in one row */
            background-color: orangered; /* Changed button color to orange */
            color: white;
            padding: 8px 16px; /* Adjusted padding for smaller buttons */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px; /* Reduced font size for smaller buttons */
            margin-right: 5px; /* Added margin between buttons */
        }

            input[type="submit"]:hover,
            input[type="button"]:hover {
                background-color: #ff7f00; /* Darker shade of orange on hover */
            }

        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-left: -10px; /* Negative margin to counteract the margin on containers */
        }

        .clearfix {
            display: flex;
            justify-content: center; /* Align items horizontally in the center */
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="container">
            <h2>Participant Information</h2>
            <form asp-action="Create" asp-controller="Students" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SportSelected" class="control-label"></label>
                    <select asp-for="SportSelected" class="form-control" required>
                        <option value="">Select Sport</option>
                        <option value="Soccer">Soccer</option>
                        <option value="Basketball">Basketball</option>
                        <option value="Tennis">Tennis</option>
                        <option value="Netball">Netball</option>
                        <option value="Volleyball">Volleyball</option>
                        <option value="Rugby">Rugby</option>
                    </select>
                    <span asp-validation-for="SportSelected" class="text-danger"></span>
                <br />
                <br />
                <h1>Additional Information</h1>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
              

                <div class="form-group">
                    <label asp-for="Experience" class="control-label"></label>
                    <input asp-for="Experience" class="form-control" />
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
