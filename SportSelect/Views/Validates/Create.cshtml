@model SportSelect.Models.Validate
@{
    ViewData["Title"] = "Create";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<h1>My Application</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
<head>
    <title>Sport Registration Form</title>
    <style>
        .card-container {
            display: flex;
            justify-content: space-between; /* Adjusted */
            align-items: inherit;
            width: 100%; /* Adjusted */
            max-width: 1200px; /* Adjust as needed */
            margin: 0 auto; /* Centering */
        }

        .card {
            width: 30%; /* Adjusted */
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="number"] {
            width: calc(100% - 22px);
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button[type="submit-button"] {
            background-color: orangered;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 300px;
        }

            button[type="submit-button"]:hover {
                background-color: #ff7f00;
            }
    </style>
</head>
<br />
<h1>Rate Your Ability</h1>
<h5>You only have one entry for this, contact admin for any futher assistance</h5>
<br />
<body>
    <form asp-action="Create" method="post">
        <div class="card-container">
            <div class="card">
                <h2>Physical Attributes</h2>
                <div class="form-group">
                    <label asp-for="Age">Age:</label>
                    <input asp-for="Age" class="form-control" required>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Weight">Weight:</label>
                    <input asp-for="Weight" class="form-control" required>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="card">
                <h2>Strength and Endurance Rates</h2>
                <div class="form-group">
                    <label asp-for="Strength">Strength Rate (out of 10):</label>
                    <input asp-for="Strength" class="form-control" min="0" max="10" required>
                    <span asp-validation-for="Strength" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Endurance">Endurance Rate (out of 10):</label>
                    <input asp-for="Endurance" class="form-control" min="0" max="10" required>
                    <span asp-validation-for="Endurance" class="text-danger"></span>
                </div>
            </div>
            <div class="card">
                <h2>Physical Factors</h2>
                <div class="form-group">
                    <label asp-for="Passion">Passion Rate (out of 10):</label>
                    <input asp-for="Passion" class="form-control" min="0" max="10" required>
                    <span asp-validation-for="Passion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Determination">Determination Rate (out of 10):</label>
                    <input asp-for="Determination" class="form-control" min="0" max="10" required>
                    <span asp-validation-for="Determination" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeamWork">Teamwork Rate (out of 10):</label>
                    <input asp-for="TeamWork" class="form-control" min="0" max="10" required>
                    <span asp-validation-for="TeamWork" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="text-center">

            <button type="submit-button" class="participate-button">Validate</button>
         </div>
       
    </form>
    <br />
    <br />
    <div class="text-center">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
        <br />
        <br />
        <br />
        <br />
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>